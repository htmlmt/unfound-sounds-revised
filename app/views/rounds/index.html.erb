<% number_of_rounds = @rounds.length %>
<div class="body">
    <% if @current_round == true %>
        <main class="body--main current-round">
            <h1>THE VINYL TREASURE HUNT IS ON</h1>
            <p>It started <%= Date.today.beginning_of_month.strftime("%A, %B %e") %>. Sign up or login to see hints.</p>
    <% else %>
        <main class="body--main upcoming-round">
            <h1>THE NEXT VINYL TREASURE HUNT AWAITS YOU</h1>
            <p>Starting <%= (Date.today.beginning_of_month + 1.month).strftime("%A, %B %e") %>, these albums will be hidden in local businesses.</p>
    <% end %>
        <div class="body--albums">
            <% @round.albums.each do |album| %>
                <section class="albums--album">
                    <%= link_to album_path(album), class: "album--link" do |link| %>
                        <div class="album--image">
                            <%= image_tag(album.cover) %>
                        </div>
                        <div class="album--info">
                            <p><%= link_to "\"#{album.title}\" by #{album.band}", album_path(album) %></p>
                            <% album.places.each do |place| %>
                                <em>hidden in <%= place.city %></em>
                            <% end %>
                        </div>
                    <% end %>
                </section>
            <% end %>
        </div>
    </main>
    <header class="body--found-header">
        <h1>FOUND SOUNDS</h1>
    </header>
    <% @rounds.each_with_index do |round, index| %>
        <% @gmaps_links = [] %>
        <% round.albums.each do |album|  %>
          <% album.places.each do |place| %>
            <% gmaps_link = place.address + ' ' + place.city + ' ' + place.state %>
            <% gmaps_link.gsub!(' ', '+') %>
            <% @gmaps_links << gmaps_link %>
          <% end %>
        <% end %>
        <% if round != nil %>
            <div class="body--albums">
                <% round.albums.each do |album| %>
                    <section class="albums--album">
                        <%= link_to album_path(album), class: "album--link" do |link| %>
                            <div class="album--image">
                                <%= image_tag(album.cover) %>
                            </div>
                            <div class="album--info">
                                <p><%= link_to "\"#{album.title}\" by #{album.band}", album_path(album) %></p>
                                <% album.places.each do |place| %>
                                    <em>found at <%= link_to place.name, place.link %> by 
                                    <%= link_to "#{album.find.user.first_name} #{album.find.user.last_name}", user_path(album.find.user) %>
                                    </em>
                                <% end %>
                            </div>
                        <% end %>
                    </section>
                <% end %>
            </div>
        <% else %>
            <img src="" alt="Next vinyl treasure hunt coming soon"/>
        <% end %>
    <% end %>
</div>