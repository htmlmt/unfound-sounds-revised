  <meta name="MobileOptimized" content="320">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <meta name="description" content="Monthly vinyl treasure hunts in Lincoln, Omaha and Sioux Falls." />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  
  <!-- SOCIAL METADATA -->
  <meta property="og:locale" content="en_US"/>
  <meta property="og:type" content="article"/>
  <meta property="og:title" content="Unfound Sounds"/>
  <meta property="og:description" content="Monthly vinyl treasure hunts in Lincoln, Omaha and Sioux Falls."/>
