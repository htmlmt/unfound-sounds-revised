<!DOCTYPE html>
<html>
<head>
  <title>Unfound Sounds</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="//use.typekit.net/aqv1ptn.js"></script>
  <script>try{Typekit.load();}catch(e){}</script>
  <meta name="google-site-verification" content="bv959NvytynvWSeYFBs2rN33ItkgNf18Jbr587S3Lhg" />
</head>
<body>
<header class="header">
    <div class="header--logo">
        <%= link_to image_tag("unfound-sounds-logo.png") %>
    </div>
    <div class="header--title">
        <h1><%= link_to "Unfound Sounds", "/" %></h1>
    </div>
    <nav class="header--navigation">
        <% if current_user %>
            <a href="/logout"><div class="navigation--button">
                <h3>logout</h3>
            </div></a><a href="/users/<%= current_user.username %>"><div class="navigation--button">
                <h3>profile</h3>
            </div></a>
        <% else %>
            <a href="/login"><div class="navigation--button">
                <h3>login</h3>
            </div></a><a href="/signup" data-no-turbolink="true"><div class="navigation--button">
                <h3>signup</h3>
            </div></a>
        <% end %>
    </nav>
</header>
<% if flash[:alert] %>
    <p id="flash_alert" class="messages alter"><%= flash[:alert] %></p>
<% end %>
<%= yield %>

</body>
</html>
