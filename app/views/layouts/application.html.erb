  <link href="" rel="apple-touch-icon" sizes="120x120" />
  <link href="" rel="apple-touch-icon" sizes="152x152" />
  <link href="" rel="apple-touch-icon" sizes="180x180" />
</head>
<body>
<header class="header">
    <div class="header--container">
        <div class="header--logo">
            <%= link_to image_tag("unfound-sounds-logo.png"), "/", remote: true %>
        </div>
        <div class="header--title">
            <a href="/"><h1>Unfound Sounds</h1></a>
        </div>
        <nav class="header--navigation">
            <% if current_user %>
                <a href="/logout"><div class="navigation--button">
                    <h3>log out</h3>
                </div></a><a href="/users/<%= current_user.username %>/edit"><div class="navigation--button">
                    <h3>profile</h3>
                </div></a>
            <% else %>
                <a href="/login"><div class="navigation--button">
                    <h3>log in</h3>
                </div></a><a href="/signup" data-no-turbolink="true"><div class="navigation--button">
                    <h3>sign up</h3>
                </div></a>
            <% end %>
        </nav>
    </div>
</header>
<% if flash[:alert] %>
    <p id="flash_alert" class="messages alter"><%= flash[:alert] %></p>
<% end %>

<%= yield %>
