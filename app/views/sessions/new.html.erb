<div class="login--container">
    <main class="login">
        <p><%= flash.notice %></p>
        <%= form_tag sessions_path do %>
            <div class="field">
                <%= label_tag :email %>
                <%= text_field_tag :email, params[:email] %>
            </div>
            <div class="field">
                <%= label_tag :password %>
                <%= password_field_tag :password %>
            </div>
            <%= link_to 'Forget your password?', new_password_reset_path %>
            <div class="login--submit"><%= submit_tag "Login" %></div>
        <% end %>
    </main>
</div>